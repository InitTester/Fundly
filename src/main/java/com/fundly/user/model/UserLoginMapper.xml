<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fundly.user.model.UserLoginDao">

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM user_info
    </select>

    <select id="emailCheck" resultType="int" parameterType="String">
        SELECT COUNT(*) FROM user_info WHERE user_email = #{user_email}
    </select>

    <insert id="insert" >
        INSERT INTO user_info (`user_id`, `user_name`, `user_pwd`, `user_email`,`user_status`,`dba_reg_id`)
        VALUES(#{user_id}, #{user_name}, #{user_pwd}, #{user_email}, #{user_status}, #{dba_reg_id});
    </insert>

</mapper>